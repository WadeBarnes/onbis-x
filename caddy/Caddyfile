0.0.0.0:80, 0.0.0.0:443 {
    log logs/access.log
    root /srv/
    tls self_signed

    rewrite {
        r ^/onbis/assets/(.*)$
        to /assets/{1}
    }

    proxy /on-tob {%TOB_API_URL%}/api/v1 {
        without /on-tob
    }

    proxy / vonx-agent:8000 {
        except /assets
        # health_check /health  # return 502 bad gateway if not synced
        transparent
    }
}
